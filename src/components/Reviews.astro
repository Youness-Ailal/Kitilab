    </div>
  </div>
</section>

<script>
  import Swiper from "swiper";

  const nextButton = document.querySelector(".reviews__next") as HTMLElement;
  const prevButton = document.querySelector(".reviews__prev") as HTMLElement;
  const swiper = new Swiper(".reviews__slider", {
    slidesPerView: "auto",
    loop: true,
    spaceBetween: 50,
    grabCursor: true,
  });

  nextButton.onclick = e => {
    swiper.slideNext();
  };
  prevButton.onclick = e => {
    swiper.slidePrev();
  };
</script>
